<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="UMS"
        android:textAlignment="center"
        android:textColor="#FF0000"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="parent"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="1.0">


        <ImageView
            android:id="@+id/smsButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="@+id/internetButton"
            app:layout_constraintStart_toStartOf="@+id/internetButton"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            android:src="@drawable/photo5" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SMS"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textStyle="bold"            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="@+id/smsButton"
            app:layout_constraintStart_toStartOf="@+id/smsButton"
            app:layout_constraintTop_toBottomOf="@+id/smsButton" />

        <ImageView
            android:id="@+id/internetButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="@+id/tarifButton"
            app:layout_constraintStart_toStartOf="@+id/tarifButton"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            android:src="@drawable/photo3" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="INTERNET"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/internetButton"
            app:layout_constraintStart_toStartOf="@+id/internetButton"
            app:layout_constraintTop_toBottomOf="@+id/internetButton" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="TARIFLAR"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/tarifButton"
            app:layout_constraintStart_toStartOf="@+id/tarifButton"
            app:layout_constraintTop_toBottomOf="@+id/tarifButton" />

        <ImageView
            android:id="@+id/tarifButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="60dp"
            android:src="@drawable/photo1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DAQIQALAR"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/daqiqalarButton"
            app:layout_constraintStart_toStartOf="@+id/daqiqalarButton"
            app:layout_constraintTop_toTopOf="@+id/textView4" />

        <ImageView
            android:id="@+id/daqiqalarButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginEnd="50dp"
            android:src="@drawable/photo2"
            app:layout_constraintBottom_toBottomOf="@+id/tarifButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tarifButton"
            />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XIZMATLAR"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textStyle="bold"            app:layout_constraintEnd_toEndOf="@+id/xizmatlarButton"
            app:layout_constraintStart_toStartOf="@+id/xizmatlarButton"
            app:layout_constraintTop_toTopOf="@+id/textView3" />

        <ImageView
            android:id="@+id/xizmatlarButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintBottom_toBottomOf="@+id/internetButton"
            app:layout_constraintEnd_toEndOf="@+id/daqiqalarButton"
            app:layout_constraintStart_toStartOf="@+id/daqiqalarButton"
            app:layout_constraintTop_toTopOf="@+id/internetButton"
            android:src="@drawable/photo4" />

        <ImageView
            android:id="@+id/yangiliklarButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintBottom_toBottomOf="@+id/smsButton"
            app:layout_constraintEnd_toEndOf="@+id/xizmatlarButton"
            app:layout_constraintStart_toStartOf="@+id/xizmatlarButton"
            app:layout_constraintTop_toTopOf="@+id/smsButton"
            android:src="@drawable/photo6" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="YANGILIKLAR"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/yangiliklarButton"
            app:layout_constraintStart_toStartOf="@+id/yangiliklarButton"
            app:layout_constraintTop_toTopOf="@+id/textView2" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>